<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         name="LexicalFunktionaleGrammatik"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="home.computerlinguistik.main.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="home.computerlinguistik.main.Perspective"
            id="home.computerlinguistik.main.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="home.computerlinguistik.main.MainView"
            id="home.computerlinguistik.main.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="home.computerlinguistik.main.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="productcomputerlinguistik"
         point="org.eclipse.core.runtime.products">
      <product
            application="home.computerlinguistik.main.application"
            name="computerlinguistikproduct">
         <property
               name="appName"
               value="computerlinguistikproduct">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
   </extension>

</plugin>
